        "objectNumber": "Unique catalog or accession number",
        "workType": "Classification of work (CCO: Work Type)",
        "title": "Title of the artwork (CCO: Title/Name)",
        "creator": "Artist name in 'Surname, Forename' format (CCO: Creator)",
        "creatorRole": "Role of the creator (e.g., Artist, Painter)",
        "creationDate": "Date or date expression (e.g., 'c. 1890', '1885-1890')",
        "creationEarliestDate": "Earliest possible year (negative for BCE)",
        "creationLatestDate": "Latest possible year (negative for BCE)",
        "stylePeriod": "Style, period, or movement (CCO: Style/Period)",
        "materials": "Materials used (CCO: Materials/Techniques)",
        "medium": "Medium and support (e.g., 'Oil on canvas')",
        "support": "Support material (e.g., canvas, paper, wood)",
        "technique": "Techniques used in creation",
        "measurements": "Dimensions with units (CCO: Measurements)",
        "subject": "Subject matter or iconography (CCO: Subject Matter)",
        "provenance": "Ownership history (CCO: Provenance)",
        "exhibitionHistory": "Exhibition history",
        "creditLine": "Credit line for display",
        "condition": "Current condition",
        "inscriptions": "Signatures, marks, inscriptions",
        "editionNumber": "Edition number (for prints, multiples)",
        "culture": "ISO 639-1 language code for metadata"
    }
