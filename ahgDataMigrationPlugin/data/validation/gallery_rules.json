    "rules": {
        "required": [
            "objectNumber",
            "title"
        ],
        "types": {
            "legacyId": "string",
            "parentId": "string",
            "objectNumber": "string",
            "workType": "string",
            "title": "string",
            "creator": "string",
            "creatorRole": "string",
