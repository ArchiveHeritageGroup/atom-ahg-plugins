            "culture": "^[a-z]{2}(_[A-Z]{2})?$",
            "creationEarliestDate": "^-?\\d{1,5}$",
            "creationLatestDate": "^-?\\d{1,5}$"
        },
        "maxLengths": {
            "objectNumber": 50,
