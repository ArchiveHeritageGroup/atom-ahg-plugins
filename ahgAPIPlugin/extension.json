{
    "name": "AHG API Plugin",
    "machine_name": "ahgAPIPlugin",
    "version": "1.1.3",
    "description": "Enhanced REST API v2 with API key management, full CRUD operations, batch processing, webhooks, rate limiting, and GLAM/DAM sector support",
    "author": "The Archive and Heritage Group",
    "license": "GPL-3.0",
    "requires": {
        "atom_framework": ">=1.0.0",
        "atom": ">=2.8",
        "php": ">=8.1"
    },
    "tables": [
        "ahg_api_key",
        "ahg_api_log",
        "ahg_api_rate_limit",
        "ahg_webhook",
        "ahg_webhook_delivery",
        "display_standard_sector"
    ],
    "features": [
        "REST API v2 endpoints",
        "API key management with scopes (read/write/delete)",
        "Rate limiting per API key",
        "Request logging and analytics",
        "Webhook notifications",
        "Batch operations",
        "Full data export with ?full=true",
        "GLAM/DAM sector filtering"
    ],
    "endpoints": {
        "descriptions": "/api/v2/descriptions",
        "authorities": "/api/v2/authorities",
        "repositories": "/api/v2/repositories",
        "taxonomies": "/api/v2/taxonomies",
        "search": "/api/v2/search",
        "batch": "/api/v2/batch",
        "keys": "/api/v2/keys"
    }
}
