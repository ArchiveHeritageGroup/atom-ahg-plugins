    "provides": {
        "admin_section": {
            "id": "research",
            "section": "services",
            "title": "Research Services",
            "description": "Professional research support with ORCID, collaboration, and API access",
            "icon": "fa-book-reader",
            "route": "research/dashboard",
            "permission": "administrator"
        },
        "api": {
            "base_path": "/api/research",
            "authentication": "api_key",
            "endpoints": [
                "GET /profile",
                "GET /projects",
                "POST /projects",
                "GET /collections",
                "POST /collections",
                "GET /collections/:id",
                "GET /searches",
                "GET /bookings",
                "POST /bookings",
                "GET /citations/:id/:format",
                "GET /bibliographies",
                "GET /bibliographies/:id/export/:format",
                "GET /annotations",
                "GET /stats"
            ]
        }
    },
    "features": {
        "orcid_integration": true,
        "multi_researcher_collaboration": true,
        "research_projects": true,
        "bibliography_management": true,
        "reproduction_requests": true,
