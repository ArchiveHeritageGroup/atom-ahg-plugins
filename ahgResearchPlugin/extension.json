{
    "name": "Research Portal",
    "machine_name": "ahgResearchPlugin",
    "version": "3.0.0",
    "description": "Research knowledge platform with evidence graphs, source criticism, cross-collection synthesis, W3C annotations, AI extraction orchestration, validation queues, snapshots, assertions, hypotheses, ORCID integration, collaboration, bibliography, reproduction requests, workspaces, journal, reports, notifications, RO-Crate packaging, ODRL rights, reproducibility packs, DOI minting, and REST API access",
    "author": "The Archive and Heritage Group",
    "license": "GPL-3.0",
    "category": "research",
    "requires": {
        "atom_framework": ">=1.0.0",
        "atom": ">=2.8",
        "php": ">=8.1"
    },
    "dependencies": [
        "ahgCorePlugin",
        "ahgAccessRequestPlugin"
    ],
    "optional": {
