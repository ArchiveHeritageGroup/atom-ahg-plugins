[Unit]
Description=AHG AI Condition Assessment Service
Documentation=https://github.com/ArchiveHeritageGroup/atom-extensions-catalog
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service
Environment=PATH=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/venv/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8100 --workers 1 --log-level info
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ai-condition

# Resource limits
LimitNOFILE=65536
MemoryMax=4G
TimeoutStartSec=120
TimeoutStopSec=30

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/uploads
ReadWritePaths=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/logs
ReadWritePaths=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/weights
ReadWritePaths=/usr/share/nginx/archive/atom-ahg-plugins/ahgAiConditionPlugin/service/runs

[Install]
WantedBy=multi-user.target
