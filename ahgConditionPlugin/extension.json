{
    "name": "Condition Assessment",
    "machine_name": "ahgConditionPlugin",
    "version": "1.2.6",
    "description": "Condition assessment and reporting for museum objects",
    "author": "The Archive and Heritage Group",
    "license": "GPL-3.0",
    "requires": {
        "atom_framework": ">=1.0.0",
        "atom": ">=2.8",
        "php": ">=8.1",
        "php_extensions": [
            "gd"
        ]
    },
    "dependencies": [
        "ahgCorePlugin"
    ],
    "optional": {
        "extensions": [
            "ahgMuseumPlugin"
        ]
    },
    "display_actions": [
        {
            "id": "condition_report_action",
            "label": "Condition Report",
            "icon": "bi-clipboard-check",
            "template": "ahgConditionPlugin/templates/display/_condition_report.php",
            "contexts": ["informationobject"],
            "permission": "update",
            "weight": 40
        }
    ],
    "display_panels": [],
    "display_badges": [],
    "tables": [
        "condition_check",
        "condition_check_i18n",
        "condition_photo",
        "condition_annotation",
        "condition_template",
        "condition_field"
    ],
    "shared_tables": [],
    "helpers": [],
    "category": "museum",
    "load_order": 50
}
