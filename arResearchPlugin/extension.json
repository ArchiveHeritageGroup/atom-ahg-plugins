{
    "name": "Researcher Portal",
    "machine_name": "arResearchPlugin",
    "version": "1.0.0",
    "description": "Researcher registration, reading room booking, material requests, saved searches, annotations, and citation tracking for archive visitors and researchers.",
    "author": "The Archive and Heritage Group",
    "license": "GPL-3.0",
    "requires": {
        "atom_framework": ">=1.0.0",
        "atom": ">=2.8",
        "php": ">=8.1"
    },
    "dependencies": [],
    "optional": {
        "extensions": ["arSecurityClearancePlugin"]
    },
    "theme_support": ["arDominionB5Plugin", "arAHGThemeB5Plugin"],
    "tables": [
        "research_researcher",
        "research_reading_room",
        "research_booking",
        "research_material_request",
        "research_collection",
        "research_collection_item",
        "research_saved_search",
        "research_annotation",
        "research_citation_log",
        "research_password_reset"
